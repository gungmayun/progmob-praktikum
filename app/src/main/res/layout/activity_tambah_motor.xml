<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/abu"
    android:theme="@android:style/Theme.NoTitleBar"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:paddingHorizontal="50dp"
            android:paddingVertical="30dp"
            android:background="@drawable/rounded_corner"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TAMBAH MOTOR"
                android:gravity="center"
                android:textColor="#000000"
                android:layout_marginBottom="20dp"
                android:textSize="20sp"
                />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/editText_nopol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nomor Polisi"
                app:met_floatingLabelTextSize="8sp"
                android:textSize="10sp"
                app:met_floatingLabel="highlight" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/editText_jenis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Jenis Motor"
                app:met_floatingLabelTextSize="8sp"

                android:textSize="10sp"

                app:met_floatingLabel="highlight" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/editText_tahun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:met_floatingLabelTextSize="8sp"

                android:hint="Tahun Motor"
                android:textSize="10sp"

                app:met_floatingLabel="highlight" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/editText_harga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Harga Sewa perHari"
                app:met_floatingLabelTextSize="8sp"

                android:textSize="10sp"

                app:met_floatingLabel="highlight" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="60dp"
                android:gravity="center">

                <com.spark.submitbutton.SubmitButton
                    android:id="@+id/button_add"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Tambah Motor"
                    android:textColor="@color/gray"
                    app:sub_btn_background="@color/white"
                    app:sub_btn_duration="2000"
                    app:sub_btn_line_color="#19C91B"
                    app:sub_btn_ripple_color="#19C91B"
                    app:sub_btn_tick_color="@color/white" />
            </LinearLayout>


            <Button
                android:id="@+id/button_view"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_login_custom"
                android:text="Tambah Motor"

                android:textColor="@android:color/background_light" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>