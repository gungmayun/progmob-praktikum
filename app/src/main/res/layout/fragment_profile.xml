<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/profile"
                />

            <TextView
                android:id="@+id/txtNama"
                android:layout_below="@id/imgProfile"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="40dp"
                android:text="Nama"
                android:textColor="#008477"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp" />

            <EditText
                android:id="@+id/edtNama"
                android:layout_below="@id/txtNama"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="#09b7a6"
                />

            <View
                android:id="@+id/divider1"
                android:layout_below="@id/edtNama"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#818b8787"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                />

            <TextView
                android:id="@+id/txtUsername"
                android:layout_below="@id/divider1"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:text="Username"
                android:textColor="#008477"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp" />

            <EditText
                android:id="@+id/edtUsername"
                android:layout_below="@id/txtUsername"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="#09b7a6"
                />

            <View
                android:id="@+id/divider2"
                android:layout_below="@id/edtUsername"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#818b8787"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                />

            <TextView
                android:id="@+id/txtAlamat"
                android:layout_below="@id/divider2"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:text="Alamat"
                android:textColor="#008477"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp" />

            <EditText
                android:id="@+id/edtAlamat"
                android:layout_below="@id/txtAlamat"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="#09b7a6"
                />

            <View
                android:id="@+id/divider3"
                android:layout_below="@id/edtAlamat"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#818b8787"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                />

            <TextView
                android:id="@+id/txtKTP"
                android:layout_below="@id/divider3"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:text="KTP"
                android:textColor="#008477"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp" />

            <GridLayout
                android:id="@+id/grd1"
                android:layout_below="@id/txtKTP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:columnCount="2"
                android:rowCount="1">
                <Button
                    android:id="@+id/btnKTP"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:text="Upload"
                    android:background="#adb0b3"
                    />

                <TextView
                    android:id="@+id/txtDetailKTP"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Tidak ada"
                    android:textColor="#008477"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp" />
            </GridLayout>

        </RelativeLayout>
    </ScrollView>

</FrameLayout>